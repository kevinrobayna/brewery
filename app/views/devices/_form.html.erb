<%= form_with(model: device, class: "contents") do |form| %>
  <% if device.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul class="list-disc ml-6">
        <% device.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.textarea :name, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": device.errors[:name].none?, "border-red-400 focus:outline-red-600": device.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :ratp_id %>
    <%= form.text_field :ratp_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": device.errors[:ratp_id].none?, "border-red-400 focus:outline-red-600": device.errors[:ratp_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :connection_state %>
    <%= form.textarea :connection_state, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": device.errors[:connection_state].none?, "border-red-400 focus:outline-red-600": device.errors[:connection_state].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :mac_address %>
    <%= form.textarea :mac_address, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": device.errors[:mac_address].none?, "border-red-400 focus:outline-red-600": device.errors[:mac_address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :type %>
    <%= form.textarea :type, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": device.errors[:type].none?, "border-red-400 focus:outline-red-600": device.errors[:type].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
