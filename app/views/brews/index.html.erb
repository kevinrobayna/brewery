<% content_for :title, "Brews" %>
<% if notice.present? %>
  <p
    class="
      py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
    "
    id="notice"
  ><%= notice %></p>
<% end %>

<section id="devices" class="p-6">
  <h2 class="text-xl font-bold mb-4">📟 Devices</h2>
  <% if @devices.any? %>
    <div
      class="
        flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0
      "
    >
      <% @devices.each do |device| %>
        <%= render "devices/device", device: device %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center my-10">No devices found.</p>
  <% end %>
</section>
<!-- Beers -->
<section id="brews" class="p-6">
  <div class="flex justify-between items-center">
    <h2 class="text-xl font-bold mb-4">🍻 Beers</h2>
    <%= link_to "New brew",
    new_brew_path,
    class:
      "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <% if @brews.any? %>

    <div
      class="
        flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0
      "
    >
      <% @brews.each do |brew| %>
        <%= render brew %>
        <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          <%= link_to "Show",
          brew,
          class:
            "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= link_to "Edit",
          edit_brew_path(brew),
          class:
            "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= button_to "Destroy",
          brew,
          method: :delete,
          class:
            "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
          data: {
            turbo_confirm: "Are you sure?",
          } %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center my-10">No Brews found.</p>
  <% end %>
</section>
